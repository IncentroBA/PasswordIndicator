<?xml version="1.0" encoding="utf-8" ?>
<widget
    id="incentro.passwordindicator.PasswordIndicator"
    pluginWidget="true"
    needsEntityContext="true"
    offlineCapable="true"
    supportedPlatform="Web"
    xmlns="http://www.mendix.com/widget/1.0/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.mendix.com/widget/1.0/ ../node_modules/mendix/custom_widget.xsd"
>
    <name>Password Indicator</name>
    <description>Display a visual password indicator while inserting a (new) password</description>
    <icon />
    <properties>
        <propertyGroup caption="General">
            <propertyGroup caption="Main">
                <property key="className" type="string" required="true">
                    <caption>Class name</caption>
                    <description>Listen to this class to apply the widget to.</description>
                </property>
            </propertyGroup>
            <propertyGroup caption="levels">
                <property key="containDigit" type="boolean" defaultValue="true">
                    <caption>Contain digit?</caption>
                    <description>Password criteria to include digits.</description>
                </property>
                <property key="containLowercase" type="boolean" defaultValue="true">
                    <caption>Contain lowercase?</caption>
                    <description>Password criteria to include lowercase.</description>
                </property>
                <property key="containUppercase" type="boolean" defaultValue="true">
                    <caption>Contain uppercase?</caption>
                    <description>Password criteria to include uppercase.</description>
                </property>
                <property key="containMinimalChars" type="boolean" defaultValue="true">
                    <caption>Minimal characters?</caption>
                    <description>Password criteria minimal amount of characters.</description>
                </property>
                <property key="containSpecialChars" type="boolean" defaultValue="true">
                    <caption>Special characters?</caption>
                    <description>Password criteria to include special characters.</description>
                </property>
            </propertyGroup>
        </propertyGroup>

        <propertyGroup caption="Text">
            <property key="lvl1Txt" type="textTemplate">
                <caption>Level 1 text</caption>
                <description>
                    Password strength text. These texts are only displayed when all levels are active.
                </description>
                <translations>
                    <translation lang="en_US">Weak</translation>
                    <translation lang="nl_NL">Zwak</translation>
                </translations>
            </property>
            <property key="lvl2Txt" type="textTemplate">
                <caption>Level 2 text</caption>
                <description>Password strength text.</description>
                <translations>
                    <translation lang="en_US">Weak</translation>
                    <translation lang="nl_NL">Zwak</translation>
                </translations>
            </property>
            <property key="lvl3Txt" type="textTemplate">
                <caption>Level 3 text</caption>
                <description>Password strength text.</description>
                <translations>
                    <translation lang="en_US">Medium</translation>
                    <translation lang="nl_NL">Gemiddeld</translation>
                </translations>
            </property>
            <property key="lvl4Txt" type="textTemplate">
                <caption>Level 4 text</caption>
                <description>Password strength text.</description>
                <translations>
                    <translation lang="en_US">Strong</translation>
                    <translation lang="nl_NL">Sterk</translation>
                </translations>
            </property>
            <property key="lvl5Txt" type="textTemplate">
                <caption>Level 5 text</caption>
                <description>Password strength text.</description>
                <translations>
                    <translation lang="en_US">Great!</translation>
                    <translation lang="nl_NL">Geweldig!</translation>
                </translations>
            </property>
        </propertyGroup>
    </properties>
</widget>
